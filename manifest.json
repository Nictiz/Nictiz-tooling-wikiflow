{
    "manifest_version": 2,
    "name": "WikiFlow",
    "author": "Pieter Edelman",
    "version": "0.6.0",
    "description": "Some automation for the Wiki workflow",
    "icons": {
        "48": "icons/icon-48.png",
        "96": "icons/icon-96.png"
    },

    "background": {
        "scripts": ["scripts/background.js"]
    },

    "content_scripts": [
        {
            "matches": ["*://*.nl/index.php?title=MedMij:Vissue-*&action=edit*", "*://*.nl/index.php?title=MedMij:Vissue-*&action=edit*"],
            "include_globs": ["*://informatiestandaarden.*nictiz.nl/*"],
            "js": ["scripts/wiki_api.js", "scripts/prefix_rewriter.js", "scripts/populate_issue.js"]
        },
        {
            "matches": ["*://*.nl/wiki/MedMij:V2019.01*", "*://*.nl/wiki/MedMij:V2020.01*"],
            "include_globs": ["*://informatiestandaarden.*nictiz.nl/*"],
            "js": ["scripts/create_new_issue.js"]
        },
        {
            "matches": ["*://*.nl/index.php?title=MedMij:Vprepub/*&action=edit*", "*://*.nl/index.php?title=MedMij:V2019.01_*&action=edit*"],
            "include_globs": ["*://informatiestandaarden.*nictiz.nl/*"],
            "js": ["scripts/wiki_api.js", "scripts/prefix_rewriter.js", "scripts/diff_issue.js", "lib/node-diff3/node-diff3.js", "lib/codemirror/lib/codemirror.js", "lib/diff_match_patch/diff_match_patch.js", "lib/codemirror/addon/merge/merge.js"],
            "css": ["lib/codemirror/lib/codemirror.css", "lib/codemirror/addon/merge/merge.css", "css/diff_issue.css"]
        },
        {
            "matches": ["*://*.nl/wiki/MedMij:Vissue*"],
            "include_globs": ["*://informatiestandaarden.*nictiz.nl/*"],
            "js": ["scripts/merge_issue.js"]
        },
        {
            "matches": ["*://*.nl/wiki/MedMij:Vprepub*", "*://*.nl/wiki/MedMij:Vprepub*"],
            "include_globs": ["*://informatiestandaarden.*nictiz.nl/*"],
            "js": ["scripts/wiki_api.js", "scripts/switch_pages.js"]
        }
    ],

    "page_action": {
        "browser_style": true,
        "default_title": "Publiceer",
        "default_icon": {
            "19": "icons/icon-19.png",
            "38": "icons/icon-38.png"
        },
        "show_matches": ["*://informatiestandaarden.nictiz.nl/wiki/MedMij:Vprepub*", "*://informatiestandaarden.test-nictiz.nl/wiki/MedMij:Vprepub*"]
    },

    "browser_specific_settings": {
        "gecko": {
            "update_url": "https://raw.githubusercontent.com/Nictiz/Nictiz-tooling-wikiflow/main/dist/updates.json"
        }
    }
}
